{
  "name": "Bookmark Manager",
  "description": "A simple bookmark manager",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/scripts.js"
      ],
      "run_at": "document_idle"
    }
  ]
}